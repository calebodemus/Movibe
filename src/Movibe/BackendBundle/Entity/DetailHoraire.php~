<?php

namespace Movibe\BackendBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;

/**
 * DetailHoraire
 *
 * @ORM\Table()
 * @ORM\Entity(repositoryClass="Movibe\BackendBundle\Entity\DetailHoraireRepository")
 * @UniqueEntity(fields={"horaire","heure"},message="Cet horaire est dÃ©jÃ  enregistrÃ©"))
 */
class DetailHoraire
{
    /**
     * @var integer
     * @ORM\Id
     * @ORM\ManyToOne(targetEntity="Movibe\BackBundle\Entity\Horaire", inversedBy="heures")
     * @ORM\JoinColumn(nullable=false)
     */
    private $horaire;

    /**
     * @var \DateTime
     * @ORM\Id
     * @Assert\NotBlank(message = "L'horaire est obligatoire.")
     * @ORM\Column(name="heure", type="time")
     */
    private $heure;


    /**
     * Set horaire
     *
     * @param integer $horaire
     * @return DetailHoraire
     */
    public function setHoraire($horaire)
    {
        $this->horaire = $horaire;

        return $this;
    }

    /**
     * Get horaire
     *
     * @return integer 
     */
    public function getHoraire()
    {
        return $this->horaire;
    }

    /**
     * Set heure
     *
     * @param \DateTime $heure
     * @return DetailHoraire
     */
    public function setHeure($heure)
    {
        $this->heure = $heure;

        return $this;
    }

    /**
     * Get heure
     *
     * @return \DateTime 
     */
    public function getHeure()
    {
        return $this->heure;
    }
}
