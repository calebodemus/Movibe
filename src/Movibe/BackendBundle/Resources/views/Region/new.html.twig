{% extends 'MovibeBackendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/movibebackend/css/vendors/bootstrap-form-helpers/bootstrap-formhelpers.min.css' filter="cssrewrite,?yui_css"%}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>REGIONS<small>Création</small></h1>
    </div>

    <div class="row" id="powerwidgets">
        <div class="col-md-12 bootstrap-grid">
            <div class="powerwidget dark-red" data-widget-editbutton="false" data-widget-deletebutton="false">
                <header>
                    <h2>Sample widget<small>Clear</small></h2>
                </header>
                <div class="inner-spacer">
                    {{ form_start(form,{'method':'POST','role':'form','attr':{'novalidate':'novalidate','class':'form-horizontal'} } ) }}
                    <fieldset>
                        <legend>Form Name</legend>
                        <div class="form-group">
                            {{ form_label(form.nom,null,{'label_attr': {'class':'col-md-3 control-label'}}) }}
                            <div class="col-md-4">
                                {{ form_widget(form.nom,{'id':'nom','attr': {'placeholder':'Nom', 'class':'form-control input-md'}} )}}
                                <span class="help-block">Veuillez saisir le nom de la region</span>
                            </div>
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.pays,null,{'label_attr': {'class':'col-md-3 control-label'}}) }}
                            <div class="col-md-4">
                                {{ form_widget(form.pays,{'attr': {'placeholder':'Pays', 'class':'form-control input-md', "style":"display:none"}} )}}
                                <div id="pays" class="bfh-selectbox bfh-countries" data-flags="true" data-name="movibe_backendbundle_region[pays]" data-country="FR" data-filter="true"></div>
                                <span class="help-block">Veuillez sélectionner le pays</span>
                            </div>
                            {{ form_errors(form.pays) }}
                        </div>

                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-4">
                                {{ form_widget(form.submit,{'attr': {'class':'btn btn-primary'}} )}}
                            </div>
                        </div>
                    </fieldset>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="big-icons-buttons">
        <a class="btn btn-info" href="{{ path('movibe_backend_region') }}"><i class="fa fa-mail-reply"></i>Retour à la liste</a>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts 'bundles/movibebackend/js/vendors/bootstrap-form-helpers/bootstrap-formhelpers.min.js'
                   'bundles/movibebackend/js/vendors/bootstrap-form-helpers/bootstrap-formhelpers-countries.fr_FR.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


