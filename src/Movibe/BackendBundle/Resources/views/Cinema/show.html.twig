{% extends 'MovibeBackendBundle::layout.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>CINEMAS<small>Affichage</small></h1>
    </div>

    <div class="row" id="powerwidgets">
        <div class="col-md-12 bootstrap-grid">
            <div class="powerwidget dark-red" data-widget-editbutton="false" data-widget-deletebutton="false">
                <header>
                    <h2>Sample widget<small>Clear</small></h2>
                </header>
                <div class="inner-spacer">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="20%">Id</th>
                            <th width="25%">Nom</th>
                            <th width="20%">Adresse</th>
                            <th width="20%">Ville</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td width="1%"><span class="num">{{ cinema.id }}</span></td>
                            <td>{{ cinema.nom }}</td>
                            <td>{{ cinema.adresse }}</td>
                            <td>{{ cinema.ville.nom }}</td>
                        </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="big-icons-buttons">
        <a class="btn btn-info" href="{{ path('movibe_backend_cinema') }}"><i class="fa fa-mail-reply"></i>Retour Ã  la liste</a>
        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('movibe_backend_cinema_new') }}"><i class="fa fa-plus"></i> Ajout</a>
            <a class="btn btn-warning" href="{{ path('movibe_backend_cinema_edit', { 'id': cinema.id }) }}"><i class="fa fa-pencil"></i> Edit</a>
            <a class="btn btn-danger" href="{{ path('movibe_backend_cinema_delete', { 'id': cinema.id }) }}"><i class="fa fa-times"></i> Delete</a>
        </div>
    </div>


{% endblock %}


